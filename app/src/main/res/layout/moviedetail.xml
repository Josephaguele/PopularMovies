<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/moviename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mintgreen"
            android:fontFamily="sans-serif"
            android:padding="34dp"
            tools:text="Chappie"
            android:textColor="@color/white"
            android:textSize="44sp" />

        <ImageView
            android:id="@+id/movieimage"
            android:layout_width="120dp"
            android:layout_height="220dp"
            android:layout_below="@id/moviename"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="16dp"
            android:padding="2dp"/>
            <!--android:src="@drawable/sample_5" -->

        <TextView
            android:id="@+id/movieyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moviename"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/movieimage"
            tools:text="2015"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/movietime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieyear"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/movieimage"
            tools:text="120min"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/movierating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/movietime"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/movieimage"
            tools:text="8.1/10"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/favourite"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/movierating"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/movieimage"
            android:background="@color/mintgreen2"
            android:text="@string/mark_as_favourite"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieimage"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="8dp"
            tools:text="Every child comes into the world full of promise, and none more so than Chappie: he is gifted, special, a prodigy. Chappie he is a robot."
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@id/overview"
            android:background="@color/colorPrimaryDark"/>


        <TextView
            android:layout_marginTop="6dp"
            android:text="@string/trailer"
            tools:textSize="18dp"
            android:id="@+id/textt"
            android:layout_marginLeft="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_height="wrap_content"/>


        <ImageButton
            android:layout_width="30dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textt"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/btn"
            android:id="@+id/play"
            android:layout_height="30dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/line2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="90dp"
            android:layout_below="@id/line1"
            android:background="@color/colorPrimaryDark"/>


    </RelativeLayout>
</ScrollView>
















